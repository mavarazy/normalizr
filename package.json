{
  "name": "@process-street/normalizr",
  "version": "0.0.1",
  "description": "Normalizes and denormalizes JSON according to schema for Redux and Flux applications",
  "bugs": {
    "url": "https://github.com/mavarazy/normalizr/issues"
  },
  "homepage": "https://github.com/mavarazy/normalizr",
  "repository": {
    "url": "https://github.com/mavarazy/normalizr.git",
    "type": "git"
  },
  "keywords": [
    "flux",
    "redux",
    "normalize",
    "denormalize",
    "api",
    "json"
  ],
  "files": [
    "dist/",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/normalizr.js",
  "module": "dist/normalizr.es.js",
  "typings": "index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm-run-all --parallel build:*",
    "build:development": "NODE_ENV=development rollup -c --extend",
    "build:production": "NODE_ENV=production rollup -c --extend",
    "clean": "rimraf dist",
    "flow": "flow",
    "lint": "eslint --fix .",
    "lint:ci": "eslint .",
    "prebuild": "npm run clean",
    "precommit": "flow check && lint-staged",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:coverage": "npm run test -- --coverage && cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release"
  },
  "author": "Paul Armstrong",
  "contributors": [
    "Dan Abramov"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@process-street/subgrade": "^1.3.7",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.65.0",
    "husky": "^0.14.3",
    "immutable": "^3.8.1",
    "jest": "^24.1.0",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^3.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.3",
    "typescript": "^3.3.3333",
    "typescript-definition-tester": "0.0.6",
    "uglify-es": "^3.3.8"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [ "js" ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "test",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
